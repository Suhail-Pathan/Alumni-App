        <activity android:name=".fullimageView" />
        <activity android:name=".gallery" />
        <activity android:name=".gallery_details" />
        <activity android:name=".gallery_main" />
        <activity android:name=".menu_feedback" />
        <activity android:name=".menu_profile" />
        <activity android:name=".nav_main" />
        <activity android:name=".resetpassword" />
        <activity android:name=".userprofile" />
        <activity android:name=".sign_up" />
        <activity android:name=".login" />
        <activity android:name=".dashboard" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/rounded_button" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>