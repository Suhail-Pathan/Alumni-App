<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetpassword"
    android:background="#fff">
    <ImageView
        android:id="@+id/imageViewrs"
        android:layout_width="130dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="140dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/alumni1" />


    <TextView
        android:id="@+id/bannerrs"
        android:layout_width="352dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewrs"
        android:layout_centerHorizontal="true"

        android:layout_marginEnd="32dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/bungee"
        android:text="Reset_Password"
        android:textAlignment="center"

        android:textColor="@android:color/holo_red_light"

        android:textSize="35sp" />

    <EditText
        android:id="@+id/emailrs"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bannerrs"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="110dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:boxStrokeColor="@color/orange"
        app:boxStrokeWidthFocused="2dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailrs"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/rounded_button"
        android:text="Reset"
        android:textColor="#fff"
        android:textSize="24sp"
        android:transitionName="button_tran" />


</RelativeLayout>