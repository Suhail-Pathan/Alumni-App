<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userprofile"
    android:background="#fff">

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bungee"
        android:text="User_Profile"
        android:textColor="@android:color/holo_red_light"

        android:textSize="35sp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="264dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="185dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prnnumber_view"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Logout"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/email_id"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/banner"
        android:layout_marginEnd="184dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="53dp"
        android:text="EmailAddress" />

    <TextView
        android:id="@+id/email_view"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email_id"
        android:layout_marginEnd="192dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email_view"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="32dp"
        android:text="User Name" />

    <TextView
        android:id="@+id/username_view"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_name"
        android:layout_marginEnd="189dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/prnnumber"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_view"
        android:layout_marginEnd="198dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="36dp"
        android:text="PRN Number" />

    <TextView
        android:id="@+id/prnnumber_view"
        android:layout_width="166dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prnnumber"
        android:layout_marginEnd="192dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="34dp" />
</RelativeLayout>